<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:backgroundTint="@color/cardview_dark_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="VehicleType :"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/VType"
        android:layout_marginTop="-45dp"
        android:layout_marginStart="173dp"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="  Car"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginLeft="173dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="VehicleModel:"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/VModel"
        android:layout_marginTop="-45dp"
        android:layout_marginStart="185dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Maruti"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginLeft="175dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="AvailableSeats:"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/VSeats"
        android:layout_marginTop="-45dp"
        android:layout_marginStart="199dp"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="  4"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginLeft="175dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="VehiclePrice :"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/VPrice"
        android:layout_marginTop="-45dp"
        android:layout_marginStart="178dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="  Rs.6000000"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginLeft="175dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Contact :"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/VContact"
        android:layout_marginTop="-45dp"
        android:layout_marginStart="118dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="  0762525476"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginLeft="175dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Other Information :"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/VDes"
        android:layout_marginTop="-45dp"
        android:layout_marginStart="244dp"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginRight="0dp"
        android:text="  Brand new car"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginLeft="130dp">

    </TextView>

    <Button
        android:id="@+id/paymentbtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="250dp"
        android:text="Rent"
        app:cornerRadius="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="5dp"
        android:background="#FF5722"/>

</LinearLayout>